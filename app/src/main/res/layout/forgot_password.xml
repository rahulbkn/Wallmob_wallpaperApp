<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:background="?attr/colorSurface">
	<LinearLayout
		android:id="@+id/linear13"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="24dp"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<com.google.android.material.card.MaterialCardView
			android:id="@+id/cardview4"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_marginTop="32dp"
			android:layout_marginBottom="24dp"
			app:cardBackgroundColor="?attr/colorPrimaryContainer"
			app:cardCornerRadius="28dp"
			app:cardElevation="2dp"
			app:strokeColor="?attr/colorOutline"
			app:strokeWidth="1dp">
			<ImageView
				android:id="@+id/imageview2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="20dp"
				android:src="@drawable/default_image"
				android:scaleType="centerInside"
				android:contentDescription="Lockicon"
				android:tint="?attr/colorOnPrimaryContainer" />
		</com.google.android.material.card.MaterialCardView>
		<TextView
			android:id="@+id/textview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
			android:text="Reset Password"
			android:textSize="12sp"
			android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" />
		<TextView
			android:id="@+id/textview4"
			android:layout_width="280dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="32dp"
			android:text="Enter your email to receive reset instructions"
			android:textSize="12sp"
			android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
			android:textAlignment="center" />
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/email_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			style="@style/Widget.Material3.TextInputLayout.FilledBox"
			app:startIconDrawable="@drawable/ic_email"
			app:startIconTint="?attr/colorOnSurfaceVariant"
			app:helperText="Enteryourregisteredemail"
			app:helperTextTextColor="?attr/colorOnSurfaceVariant"
			app:boxBackgroundColor="?attr/colorSurfaceVariant"
			app:boxStrokeColor="?attr/colorOutline"
			app:errorTextColor="?attr/colorError">
			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/email_input"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:hint="Email address"
				android:imeOptions="actionDone"
				android:inputType="textEmailAddress"
				android:autofillHints="email" />
		</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.button.MaterialButton
			android:id="@+id/reset_button"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_marginBottom="16dp"
			android:text="Send Reset Link"
			android:textSize="12sp"
			style="@style/Widget.Material3.Button"
			app:cornerRadius="20dp" />
		<com.google.android.material.progressindicator.CircularProgressIndicator
			android:id="@+id/progress"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_marginBottom="16dp"
			android:visibility="gone"
			app:indicatorColor="?attr/colorPrimary" />
		<com.google.android.material.button.MaterialButton
			android:id="@+id/back_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Back to Login"
			android:textSize="12sp"
			style="@style/Widget.Material3.Button.TextButton" />
	</LinearLayout>
</androidx.core.widget.NestedScrollView>
